/**index.wxss**/

page {
  height: 100%;
}

.content {
  height: 100%;
  overflow: hidden;
}

/* 头部   start */

.header {
  width: 100%;
  height: 35px;
}

.header .search_box {
  position: fixed;
  z-index: 99;
  top: 0;
  left: 0;
  width: 100%;
  height: 35px;
  text-align: center;
  background-color: #fff;
  /* box-shadow: 0 0 30px rgba(0, 0, 0, 0.1); */
}

.header .search_box .search_input {
  width: 90%;
  margin: 0 auto auto auto;
  height: 30px;
  min-height: 0;
  font-size: 14px;
  outline: none;
  border-radius: 8px;
  background-color: #efefef;
}

/* 头部   end */

.scroll_box {
  position: relative;
  height: calc(100% - 35px);
  background-color: #fff;
}

/* 分类   start */

.cid_box {
  width: 100%;
  height: auto;
  /* margin-top: 5px; */
  text-align: left;
  background-color: #fff;
}

.cid_box .icon_box {
  width: 100%;
  font-size: 0;
  text-align: center;
}

.cid_box .cover {
  display: inline-block;
  width: 25%;
  padding: 6px 0 8px 0;
  background-color: #fff;
}

.cid_box .btn {
  width: 45px;
  margin: auto;
  padding: 0;
  background-color: #fff;
}

.cid_box .btn::after {
  border: none;
}

.cid_box .btn icon {
  display: block;
  width: 40px;
  height: 40px;
  margin: auto;
  color: #fff;
  font-size: 18px;
  line-height: 40px;
  border-radius: 50%;
  background-color: #378ae8;
}

.cid_box .btn .name {
  display: block;
  height: 28px;
  text-align: center;
  font-size: 14px;
  color: #3f4c71;
}

.cid_box .btn icon {
  font-size: 20px;
}

.cid_box .all icon {
  font-size: 18px;
}

.cid_box .dress icon {
  background-color: #e33c47;
}

.cid_box .man icon {
  line-height: 43px;
  background-color: #5a58a7;
}

.cid_box .underwear icon {
  font-size: 21px;
  background-color: #874cc9;
}

.cid_box .digital icon {
  line-height: 42px;
  background-color: #b68c3a;
}

.cid_box .food icon {
  line-height: 43px;
  background-color: #30be76;
}

.cid_box .beauty icon {
  font-size: 21px;
  line-height: 45px;
  background-color: #d73764;
}

.cid_box .infant icon {
  font-size: 22px;
  background-color: #2fc4cd;
}

.cid_box .shoes icon {
  background-color: #30b8eb;
}

.cid_box .household icon {
  font-size: 21px;
  line-height: 45px;
  background-color: #e19b49;
}

.cid_box .sport icon {
  font-size: 22px;
  background-color: #5a6cf6;
}

.cid_box .else icon {
  font-size: 22px;
  background-color: #c76a4a;
}

/* 分类   end */

.title {
  display: block;
  padding: 5px 0 8px 0;
  font-size: 14px;
  text-align: center;
  color: #49486f;
  line-height: 1;
  background-color: #f6f6f6;
}



