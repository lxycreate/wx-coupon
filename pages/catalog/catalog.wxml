<!--pages/catalog/catalog.wxml-->
<view class="content">
  <!-- 头部   start -->
  <view class='header'>
    <view class="btn_box">
      <button class="btn {{item.is_select?'btn_selected':''}}" wx:for="{{filter_btns}}" wx:key="index" bindtap="changeSortWay" data-index="{{index}}">
        {{item.name}}
        <view wx:if="{{index==2}}" class="icon_box">
          <icon wx:if="{{is_price_asc}}" class="iconfont icon-xiangshang1 asc"></icon>
          <icon wx:if="{{is_price_desc}}" class="iconfont icon-xiangxia desc"></icon>
        </view>
      </button>
    </view>
    <!-- 筛选弹窗   start -->
    <view class="screen_box">
      <text class="title">筛选</text>
      <view class="screen_btns">
        <view class="cover" wx:for="{{screen_btns}}" wx:key="index">
          <button class="btn {{item.is_select?'screen_selected':''}}">{{item.name}}</button>
        </view>
      </view>
    </view>
    <view class="shade"></view>
    <!-- 筛选弹窗   end -->
  </view>
  <!-- 头部   end -->

  <!-- 商品区域   start -->
  <scroll-view scroll-y="{{true}}" class="scroll_box js_scroll_box" enable-back-to-top="{{true}}" bindscroll="scrollGoodsList" lower-threshold="5px" bindscrolltolower="scrollLowerEvent" scroll-top="{{scroll_goods_list.top}}" scroll-with-animation="{{false}}">
    <view hidden="{{is_hidden_top_loading}}" class="top_loading">加载中...</view>
    <!-- 商品区域   start -->
    <view class="goods_list">
      <view class="goods" wx:for="{{goods_list}}" wx:key="item">
        <view class="goods_item">
          <!-- 图 -->
          <view class="goods_container">
            <view class="img_box">
              <view wx:if="{{item.is_qiang==1}}" class="qiang">正在参加淘抢购</view>
              <view wx:if="{{item.is_ju==1}}" class="ju">正在参加聚划算</view>
              <image src="{{item.goods_pic}}" lazy-load="{{true}}"></image>
            </view>
          </view>
          <!-- 文 -->
          <view class="goods_container">
            <view class="text_box">
              <text class="goods_title">{{item.goods_title}}</text>
              <view class="price_sale">
                <text class="price">原价￥{{item.goods_price}}</text>
                <text class="sale">销量 {{item.goods_sale}}</text>
              </view>
              <!-- <text class="dsr">评分 4.8</text> -->
              <!--  -->
              <view class="price_coupon">
                <view class="box left">
                  <text>
                     <text class="the_title">券后</text>
                  <text class="the_value">￥{{item.after_coupon}}</text>
                  </text>
                </view>
                <view class="box right">
                  <text>
                    <text class="the_title">领券</text>
                  <text class="the_value">￥{{item.coupon_price}}</text>
                  </text>
                </view>
              </view>
            </view>
            <!-- text_box  end -->
          </view>
          <!--第二container  end-->
        </view>
      </view>
    </view>

    <!-- 加载动画 -->
    <view class="loading_box" hidden="{{is_hidden_loading}}">
      <image class="loading" lazy-load="{{true}}" src="../images/loading.gif"></image>
    </view>
    <!-- 没有更多了提示 -->
    <view class="no_more" hidden="{{is_more_goods}}">没有更多了...</view>
    <!-- <view style='height:20px'></view> -->
  </scroll-view>
  <!-- 商品区域   end -->
  <!-- 返回顶部按钮 -->
  <button class="to_top" hover="true" hover-class="to_top_hover" hidden="{{is_hidden_top}}" bindtap='scrollToTop'>
    <icon class="iconfont icon-xiangshang"></icon>
  </button>
</view>