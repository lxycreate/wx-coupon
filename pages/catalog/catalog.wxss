/* pages/catalog/catalog.wxss */
@import "../images/iconfont.wxss";

page {
  height: 100%;
}

.content {
  height: 100%;
}

/* 头部   start */

.header {
  height: 35px;
}

.header .btn_box {
  position: fixed;
  z-index: 99;
  top: 0;
  left: 0;
  width: 100%;
  height: 35px;
  font-size: 0;
  background-color: #fff;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
}

.header .btn_box .btn {
  display: inline-block;
  width: 25%;
  height: 35px;
  font-size: 14px;
  line-height: 35px;
  color: #3f4964;
  text-align: center;
  background-color: #fff;
}

.header .btn_box .btn::after {
  border: none;
}

.header .btn_box .btn .line {
  display: block;
  margin: auto;
  width: 30px;
  height: 1px;
  background-color: #3f4964;
}

.header .btn_box .btn .icon_box {
  display: inline-block;
  height: 35px;
  margin-left: -3px;
  vertical-align: top;
}

.header .btn_box .btn .icon_box image {
  display: block;
  width: 9px;
  height: 9px;
  margin-top: 11px;
}

.header .btn_box .btn .icon_box icon {
  position: absolute;
  display: block;
  width: 14px;
  height: 14px;
  font-size: 8px;
}

.header .btn_box .btn .icon_box .asc {
  margin-top: -5px;
}

/* .header .btn_box .btn .icon_box .desc {
  margin-top: 2px;
} */

.btn_selected {
  color: #ef5564 !important;
}

/* 头部   end */

/* 商品区域   start */

.scroll_box {
  height: calc(100% - 35px);
}

.top_loading {
  display: block;
  padding: 3px 0;
  text-align: center;
  font-size: 14px;
  color: #3f4964;
}

.goods_list .goods {
  border-bottom: 1px solid #eee;
}

.goods_list .goods_item {
  font-size: 0;
  background-color: #fff;
}

.goods_list .goods_item .goods_container {
  display: inline-block;
  width: calc(100% - 130px);
  height: 130px;
  vertical-align: top;
}

.goods_list .goods_item .goods_container:first-child {
  width: 130px;
}

.goods_list .goods_item .goods_container .img_box {
  display: block;
  padding: 6px;
}

.goods_list .goods_item .goods_container .img_box image {
  display: block;
  width: 118px;
  height: 118px;
}

.goods_list .goods_item .goods_container .text_box {
  display: block;
  padding: 5px 5px 5px 1px;
}

.goods_list .goods_item .goods_container .text_box .goods_title {
  display: block;
  margin-top: 2px;
  font-size: 14px;
  text-align: left;
  line-height: 15px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.goods_list .goods_item .goods_container .text_box .price_sale {
  display: block;
  margin-top: 8px;
  font-size: 0;
}

.goods_list .goods_item .goods_container .price_sale text {
  display: inline-block;
  width: 50%;
  color: #999;
  font-size: 14px;
  vertical-align: top;
}

.goods_list .goods_item .goods_container .price_sale .price {
  text-align: left;
}

.goods_list .goods_item .goods_container .price_sale .sale {
  text-align: right;
}

.goods_list .goods_item .dsr {
  display: block;
  font-size: 14px;
  margin-top: 6px;
  color: #999;
}

.goods_list .goods_item .goods_container .price_coupon {
  display: block;
  font-size: 0;
  margin-top: 23px;
}

.goods_list .goods_item .goods_container .price_coupon .box {
  display: inline-block;
  width: 50%;
  vertical-align: middle;
}

.goods_list .goods_item .price_coupon .box>text {
  display: inline-block;
}

.goods_list .goods_item .price_coupon .box>text text {
  display: block;
  font-size: 14px;
  text-align: center;
  color: #ef5564;
}

.goods_list .goods_item .price_coupon .left>text .the_value {
  margin-top: 10px;
}

.goods_list .goods_item .price_coupon .right {
  text-align: right;
}

.goods_list .goods_item .price_coupon .right>text {
  width: 80px;
  border-radius: 5px;
  overflow: hidden;
  border: 1px solid #ef5564;
}

.goods_list .goods_item .price_coupon .right .the_title {
  padding: 3px 0 6px 0;
  color: #fff;
  line-height: 1;
  background-color: #ef5564;
}

.goods_list .goods_item .price_coupon .right .the_value {
  padding: 3px 0 6px 0;
}

.loading_box {
  height: 30px;
  padding: 3px 0;
  background-color: #fff;
}

.loading_box .loading {
  display: block;
  width: 30px;
  height: 30px;
  margin: auto;
}

/* 商品区域   end */

.to_top {
  position: fixed;
  top: 100%;
  left: 100%;
  width: 40px;
  height: 40px;
  margin: -45px 0 0 -45px;
  border-radius: 50%;
  background-color: rgba(63, 73, 100, 0.8);
}

.to_top_hover {
  background-color: #3f4964;
}

.to_top icon {
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  width: 40px;
  height: 40px;
  padding: 0;
  margin: 0;
  text-align: center;
  color: #fff;
  border-radius: 50%;
  line-height: 38px;
  font-size: 16px;
}

.no_more {
  padding: 5px 0 8px 0;
  font-size: 14px;
  color: #3f4964;
  text-align: center;
}
