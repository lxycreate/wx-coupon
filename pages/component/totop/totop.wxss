/* pages/component/totop/totop.wxss */

.to_top {
  position: fixed;
  top: 100%;
  left: 100%;
  width: 40px;
  height: 40px;
  margin: -45px 0 0 -45px;
  border-radius: 50%;
  background-color: rgba(63, 73, 100, 0.8);
}

.to_top_hover {
  background-color: #3f4964;
}

.to_top icon {
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  width: 40px;
  height: 40px;
  padding: 0;
  margin: 0;
  text-align: center;
  color: #fff;
  border-radius: 50%;
  line-height: 38px;
  font-size: 16px;
}